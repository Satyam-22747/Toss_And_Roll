<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="600dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Coin"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:padding="40dp"
        android:id="@+id/coin_text"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/coin_head_foreground"
        android:id="@+id/coin_head"
        android:layout_marginTop="110dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Toss"
        android:background="#FFD600"
        android:id="@+id/coin_btn" />
</LinearLayout>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="600dp"
        android:background="@color/black">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Dice"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:padding="40dp"
            android:id="@+id/dice_text"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dicethree"
            android:id="@+id/dice_img"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Roll"
            android:background="#FFD600"
            android:id="@+id/dice_btn"
            />
    </LinearLayout>
   </LinearLayout>





